{% for product in category.getAllProducts() %}
    {% for item in product.getItems() %}
        <ul class="item-thumbs">
            <li>
                <img src="{{ item.getRealPicturePath() | imagine_filter('item_thumb') }}" />
                <span><input type="checkbox" name="items[]" value="{{ item.getId() }}" />{{ item.getName() }}</span>
            </li>
        </ul>
    {% endfor %}
{% endfor %}