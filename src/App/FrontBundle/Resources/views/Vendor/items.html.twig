{% extends "AppFrontBundle::layout3.html.twig" %}

{% block title %}{{ 'page_title.items' | trans }}{% endblock %}

{% block style %}
    {% stylesheets
        'assets/vendor/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.css'
        filter='cssrewrite' output='css/compiled/page.css' %}
        <link rel="stylesheet" href="{{ asset_url }}">
    {% endstylesheets %}
{% endblock %}

{% block items_active %}active{% endblock %}

{% block content %}
    <div class="form-group">
        <input type="text" class="form-control" id="item-search" {% if item is defined %}value="{{ item.getName() }}"{% endif %} />
    </div>
    <hr/>
    {% if item is defined %}
        <div class="row">
            <div class="col-xs-6">
                <img src="{{ item.getPicture() }}" width="100%" />
                {% if vendorItem %}
                    <span style="color: green;">Item already added.</span>
                {% else %}
                    <form name="frm_add_item" id="frm_add_item" action="" method="post">
                        <button type="submit" class="btn btn-primary"> Add this item</button>
                    </form>
                {% endif %}
            </div>
            <div class="col-xs-6">
                <table class="tbl-item-preview">
                    <tr>
                        <td>Name : {{ item.getName() }}</td>
                    </tr>
                    <tr>
                        <td>Product : {{ item.getProduct().getName() }}</td>
                    </tr>
                    <tr>
                        <td>Brand : {{ item.getBrand().getName() }}</td>
                    </tr>
                    <tr>
                        <td>Category : {{ item.getProduct().getCategory().getCategoryName() }}</td>
                    </tr>
                    <tr>
                        <td>Commision : 
                            {% if item.getCommType() == 1 %}
                                Rs.{{ item.getCommValue() }}
                            {% else %}
                                {{ item.getCommValue() }}%
                            {% endif %}
                        </td>
                    </tr>
                </table>
            </div>
        </div>
        <hr/>
        {% if item.getVariants()|length > 0 %}
            <h5>Variants</h5>
            <table width="100%" border="1" class="tbl-item-variant">
                <tr>
                    <th>Type</th>
                    <th>Value</th>
                </tr>
                {% for variant in item.getVariants() %}
                    <tr>
                        <td>{{ variant.getVariantType().getName() }}</td>
                        <td>{{ variant.getValue()}}</td>
                    </tr>
                {% endfor %}
            </table>
        {% endif %}
    {% else %}
        {{ datatable_render(vendorItemDatatable) }}
    {% endif %}
{% endblock%}

{% block javascript %}
    {% javascripts
        'assets/vendor/datatables/media/js/jquery.dataTables.min.js'
        'assets/vendor/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.min.js'
        output='js/compiled/page.js' %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script type="text/javascript">
        $(function() {
            $("#item-search").autocomplete({
                valueKey:'title',
                source:[
                {
                    url:"{{ path('vendor_item_autocomplete') }}?q=%QUERY%",
                    type:'remote'
                }
            ]}).on('selected.xdsoft',function(e,data){
                var preview_item_path = "{{ path('app_front_vendor_items_preview', {'id': 0}) }}";
                var loc = preview_item_path.replace('0', data.id);
                window.location = loc;
                return false;                
            }); 
        });
    </script>
    <script type="text/javascript">
        $(document).ready(function() {
            $('#productsTable').DataTable({
                "responsive": true,
                "lengthMenu": [[5, 10, 25, -1], [5, 10, 25, "All"]],
                "language": {
                    "lengthMenu": "{{ 'table.lengthMenu' | trans }}",
                    "zeroRecords": "{{ 'table.zeroRecords' | trans }}",
                    "info": "{{ 'table.info' | trans }}",
                    "infoEmpty": "{{ 'table.infoEmpty' | trans }}",
                    "infoFiltered": "{{ 'table.infoFiltered' | trans }}",
                    "search": "{{ 'table.search' | trans }}",
                    "paginate": {
                        "first":      "{{ 'table.first' | trans }}",
                        "last":       "{{ 'table.last' | trans }}",
                        "next":       "{{ 'table.next' | trans }}",
                        "previous":   "{{ 'table.previous' | trans }}"
                    }
                }
            });
        });
    </script>
{% endblock %}