<div id="tree"></div>
<form method="post" action="{{ path('add_vendor_item_category', {'id': vendor.getId()}) }}" name="frm_vendor_add_item">
    <input type="hidden" name="vendor_opt_category" id="vendor_opt_category" value="" />
</form>
<script type="text/javascript">
    function getTree() {
        var tree = {{ treeData|raw }};
        
        return tree;
    }
    $('#tree').treeview({data: getTree(), onNodeSelected: function(event, data){
        $("#vendor_opt_category").val(data.id);
    }});
</script>