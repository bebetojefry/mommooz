<ul class="item-thumbs">
    {% for entry in category.getInStockEntries() %} 
        {% set item = entry.getItem() %}
        <li>
            <img src="{{ item.getRealPicturePath() | imagine_filter('item_thumb') }}" />
            <span>
                <input type="checkbox" name="entries[]" value="{{ entry.getId() }}" />
                {{ item.getName() }}
            </span>
        </li>
    {% endfor %}
</ul>